<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TODO Fix this put back into view / fragment and remove activity -->

    <include
        layout="@layout/pride_toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <com.softwareforgood.pridefestival.ui.info.DefaultInfoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:id="@+id/info_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center"
            />

        <WebView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.softwareforgood.pridefestival.ui.GenericErrorView
            android:id="@+id/info_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.softwareforgood.pridefestival.ui.info.DefaultInfoView>

</LinearLayout>
